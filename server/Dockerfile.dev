# Use a modern C++ image
FROM ubuntu:22.04

# Prevent interactive prompts during install
ENV DEBIAN_FRONTEND=noninteractive

# Install compilers, cmake, and dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    g++ \
    git \
    ninja-build \
    gdb \
    # Drogon Dependencies
    libjsoncpp-dev \
    uuid-dev \
    openssl \
    libssl-dev \
    zlib1g-dev \
    postgresql-server-dev-all \
    libhiredis-dev \
    # Install Drogon from source (recommended for latest features)
    && git clone https://github.com/drogonframework/drogon \
    && cd drogon \
    && git submodule update --init \
    && mkdir build \
    && cd build \
    && cmake .. \
    && make -j$(nproc) \
    && make install \
    && cd ../.. \
    && rm -rf drogon

# Clean up
RUN apt-get clean